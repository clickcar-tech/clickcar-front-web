<svg width="1920" height="1080" viewBox="0 0 1920 1080" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="carGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#000000;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="accentGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#FF6906;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#FF6906;stop-opacity:0.1" />
    </linearGradient>
  </defs>
  <rect width="1920" height="1080" fill="url(#carGradient)"/>
  
  <!-- Futuristic geometric patterns -->
  <g opacity="0.1">
    <rect x="200" y="100" width="300" height="2" fill="#FF6906"/>
    <rect x="200" y="200" width="200" height="2" fill="#FF6906"/>
    <rect x="200" y="300" width="400" height="2" fill="#FF6906"/>
    
    <rect x="1200" y="150" width="250" height="2" fill="#FF6906"/>
    <rect x="1200" y="250" width="350" height="2" fill="#FF6906"/>
    <rect x="1200" y="350" width="200" height="2" fill="#FF6906"/>
  </g>
  
  <!-- Central geometric element -->
  <g transform="translate(960, 540)">
    <rect x="-150" y="-30" width="300" height="60" rx="30" fill="url(#accentGradient)" opacity="0.2"/>
    <rect x="-100" y="-20" width="200" height="40" rx="20" fill="#FF6906" opacity="0.1"/>
  </g>
  
  <!-- Corner accents -->
  <circle cx="100" cy="100" r="80" fill="#FF6906" opacity="0.05"/>
  <circle cx="1820" cy="980" r="120" fill="#FF6906" opacity="0.05"/>
  <circle cx="300" cy="800" r="60" fill="#FF6906" opacity="0.05"/>
</svg>
